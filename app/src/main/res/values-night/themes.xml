<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RaihenV2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/dark_custom</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#10BABA</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@color/cyan</item>
        <item name="android:textColorSecondary">@color/cyan</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>

    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/dark_custom</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/cyan_dark</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/cyan</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="Event" parent="Theme.MaterialComponents.DayNight">
        <item name="colorAccent">@color/cyan</item>
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/dark_custom</item>
        <item name="android:statusBarColor" tools:targetApi="l">#10BABA</item>
        <item name="android:actionBarStyle">@style/Event.ActionBarStyle</item>

    </style>
    <style name="Event.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:titleTextStyle">@style/Event.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Event.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>